<div class="inline-flex items-center justify-center w-full relative">
    <hr class="w-11/12 h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
    <h1 class="absolute px-3 pb-1.5 font-medium text-gray-900 -translate-x-1/2 bg-white left-1/2 text-xl">Восстановление пароля</h1>
</div>

<%= form_with(model: @user, url: '/change_pass_final?token='+@token, class: 'text-lg rounded-xl shadow-lg gap-10 py-10 bg-btn-color/40 flex flex-col items-center justify-center text-center mx-auto w-2/4') do |form| %>

  <div class="field flex flex-col w-1/3"">
    <%= form.label :password, class: "text-black/50 pb-2"  %>
    <%= form.text_field :password, class: 'box-border rounded-xl pl-1' %>

  </div><div class="field flex flex-col w-1/3"">
    <%= form.label :confirm_password, class: "text-black/50 pb-2"  %>
    <%= form.text_field :confirm_password, class: 'box-border rounded-xl pl-1' %>

  </div>



  <div class="actions">
    <%= form.submit class: 'cursor-pointer shadow-btnEffect px-8 h-9 align-middle flex items-center bg-btn-color rounded-2xl hover:bg-violet-600 active:bg-violet-700 focus:outline-none focus:ring focus:ring-violet-300 transition duration-300 ease-in-out text-center', style: 'box-shadow: inset 0rem 0.13rem 0.25rem 0rem rgba(0, 0, 0, 0.25);' %>
  </div>

<% end %>


