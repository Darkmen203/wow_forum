<h1>Email form</h1>

<%= form_with(model: @user, url: '/change_pass_final?token='+@token) do |form| %>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>

  </div><div class="field">
    <%= form.label :confirm_password %>
    <%= form.text_field :confirm_password %>

  </div>



  <div class="actions">
    <%= form.submit class: 'px-8 py-2 text-center rounded text-base hover:text-white hover:bg-violet-600 active:bg-violet-700 focus:outline-none focus:ring focus:ring-violet-300 transition duration-300 ease-in-out' %>
  </div>

<% end %>


