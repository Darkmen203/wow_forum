<div class="h-full w-full">
  <% unless !@answer.present? %>
    <%   @answer.each do |ans| %>
      <div class="rounded-xl mt-6 py-2 shadow-lg bg-btn-color/60">
        <table class="bg-transparent mx-3 rounded-xl leading-[135%] border-collapse text-center" cellspacing="1">
          <tbody>
            <tr>
              <td class="bg-formTitle rounded-l-xl shadow-lg break-words border-r-2 border-white min-w-40">
                <span class="font-bold text-sm text-black"><%= ans.user.name %></span>
              </td>
              <td class="bg-formTitle rounded-r-xl shadow-lg break-words py-1" width="99%">
                <%= ans.created_at.strftime("%Y.%m.%d %H:%M:%S") %>
              </td>
            </tr>
            <tr>
              <td valign="top" class="border-r text-center py-2 pb-4 border-white">
                <img src="<%= ans.user.avatar_url %>" class="border-none w-16 h-16 mx-auto" alt="user_avatar">
              </td>
              <td width="100%" valign="top" class="pt-2 text-left text-xl px-4">
                <div>
                  <span><%= ans.body %></span>
                </div>
              </td>
            </tr>
            <td class="bg-formTitle rounded-xl shadow-lg border-r border-white break-words "></td>
            <td class="bg-formTitle rounded-xl shadow-lg break-words min-w-40">
                Номер ответа: <a href='<%= "/questions/" + ans.question_id.to_s %>'> <%= ans.id %></a>
                <div class="h-[1em] leading-[1] inline-block pr-2" style="float:right">
                  <%= button_to destroy_ans_path(ans), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот ответ?' }, class: 'btn btn-danger', style: 'background: none; border: none; padding: 0;' do %>
                    <img src="/trash.svg" class="w-4 h-4" alt="delete_post">
                  <% end %>
                </div>
            </td>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>
</div>